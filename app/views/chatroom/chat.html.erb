<div id="page-content">
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-10 col-xs-12 col-md-offset-3">
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title text-center">MyBlog General Chatroom</h3>
        </div>
        <div class="panel-body">
          <%= form_for(@messages, html: { class: "ui reply form", role: "form" }, url: message_path, remote: true) do |c| %>
            <div class="form-group">
              <%= c.text_field :body, class: "form-control", placeholder: "Enter a message here...", rows: "3" %>
            </div>
            <%= c.button '<i class="btn btn-info btn-sm pull-right waves-effect waves-light">send</i>'.html_safe %>
          <% end %>
          <div class="clearfix"></div>
          <hr class="margin-bottom-10">
          <div class="list-group list-group-dividered list-group-full" id="message-container">
            <%= render @message %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>