<div id="page-content">   
    <div class="container">
        <div class="jumbotron text-center text-white" id="jumbo">
          <h1 class="display-4">Welcome to MyBlog!</h1>
          <p class="lead">This is a simple website where you can post articles.</p>
          <hr class="my-4" id="l-white">
          <p>Have fun!!!</p>
          <%= link_to 'View My Articles', articles_path, class: "btn btn-success" %>
        </div>
    </div>
    
    <% if user_signed_in? %>
      <div class="container">
        <% @articles.each do |article| %>
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by <%= article.user.email if article.user %>
            </div>
            <div class="card-body">
              <div class="card-text text-center"><strong><%= simple_format(article.title) %></strong></div>
              <div class="card-text text-center"><%= simple_format(article.description) %></div>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
              edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
