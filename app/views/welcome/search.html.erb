<h1 class="text-center mt-3">Search Result</h1>  


<% @results.each do |result| %>  
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= result.user.email if result.user %>
          </div>
          <div class="card-body">
            <div class="card-text text-center"><strong><%= simple_format(result.title) %></strong></div>
            <div class="card-text text-center"><%= simple_format(result.description) %></div>
            <% if user_signed_in? && result.user == current_user%>
            <%= link_to "Edit", edit_article_path(result), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(result), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(result.created_at) %> ago, 
            edited <%= time_ago_in_words(result.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>